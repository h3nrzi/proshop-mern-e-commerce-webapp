{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerce app built with the MERN stack",
  "main": "server/dist/main.js",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "npm run dev --prefix client",
    "client:build": "npm run build --prefix client",
    "postinstall": "npm install --prefix client",
    "start:dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "build": "npm run server:build && npm run client:build",
    "start": "npm run server:start",
    "server:dev": "ts-node-dev --respawn --transpile-only --project server/tsconfig.json server/src/main.ts",
    "server:build": "tsc -p server/tsconfig.build.json",
    "server:start": "node server/dist/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^7.0.1",
    "morgan": "^1.9.0",
    "multer": "^1.4.5-lts.1",
    "react-hook-form": "^7.52.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "tsyringe": "^4.10.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.8",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.2"
  },
  "nodemonConfig": {
    "events": {
      "start": "echo '--------------------\n'& clear || cls"
    }
  },
  "author": "Hossein Rezaei",
  "license": "ISC"
}
